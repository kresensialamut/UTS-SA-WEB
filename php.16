    <h1>loop php</h1>
    <?php
      //------pengulangan------
     //for(variabelawal(mulai);batas(syarat);perubahan)
      $hewan = ['anjing', 'babi', 'cicak', 'domba'];
      for($i=0; $i< count($hewan); $i++)
        {
          echo "------------------";
          echo $hewan[$i];
          echo "-----------------<br>";
        }
      foreach($hewan as $h){
        echo "-------------";
        echo $h;
        echo "-------------<br>";
      }

    ?>
